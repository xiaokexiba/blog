<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yeff.blog.mapper.RoleMapper">

    <resultMap id="BaseResultMap" type="com.yeff.blog.entity.Role">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleName" column="role_name" jdbcType="VARCHAR"/>
        <result property="roleLabel" column="role_label" jdbcType="VARCHAR"/>
        <result property="isDisable" column="is_disable" jdbcType="BOOLEAN"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <resultMap id="RolePermissionMap" type="com.yeff.blog.dto.ResourceRoleDTO">
        <id column="id" property="id"/>
        <result column="url" property="url"/>
        <result column="request_method" property="requestMethod"/>
        <collection property="roleList" ofType="java.lang.String">
            <constructor>
                <arg column="role_label"/>
            </constructor>
        </collection>
    </resultMap>

    <resultMap id="RoleMap" type="com.yeff.blog.dto.RoleDTO">
        <id column="id" property="id"/>
        <result column="role_name" property="roleName"/>
        <result column="role_label" property="roleLabel"/>
        <result column="create_time" property="createTime"/>
        <result column="is_disable" property="isDisable"/>
        <collection property="resourceIdList" ofType="java.lang.Integer">
            <constructor>
                <arg column="resource_id"/>
            </constructor>
        </collection>
        <collection property="menuIdList" ofType="java.lang.Integer">
            <constructor>
                <arg column="menu_id"/>
            </constructor>
        </collection>
    </resultMap>

    <sql id="Base_Column_List">
        id,role_name,role_label,
        is_disable,create_time,update_time
    </sql>
    <select id="listResourceRoles" resultMap="RolePermissionMap">
        SELECT re.id,
               url,
               request_method,
               role_label
        FROM tb_resource re
                 LEFT JOIN tb_role_resource rr on re.id = rr.resource_id
                 LEFT JOIN tb_role r on rr.role_id = r.id
        WHERE parent_id is NOT NULL
          AND is_anonymous = 0
    </select>
    <select id="listRoles" resultType="com.yeff.blog.dto.RoleDTO"></select>
</mapper>
